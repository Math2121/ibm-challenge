{
  "compilerOptions": {
    "target": "es5",                                 
    "rootDir": "./",
    "baseUrl": "./src",  
                                   
    "paths": {
      "@config/*": [
        "config/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@shared/*": [
        "shared/*"
      ]
    },                                      
    "resolveJsonModule": true,                           
    "allowJs": true,                                     
    "outDir": "./dist",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                               
    "strictPropertyInitialization": false,             
    "skipLibCheck": true  ,                              
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
